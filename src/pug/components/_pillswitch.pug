mixin pillswitch(page, transition)
  // pill switch draggable.js
  .pillswitch(js-draggable data-barba-transition=transition data-next-page=page)
    .pillswitch__ghost.pillswitch__ghost--left
    .pillswitch__ghost.pillswitch__ghost--right
    .pillswitch__track
    .pillswitch__control(js-draggable-control)
      .pillswitch__control-dot
